<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">New Application</h1>
</div>

<div ng-app="svcNewApp" ng-controller="svcNewCtrl">
  <div class="col-lg-12">
    <div class="card shadow mb-4">
      <!-- Header -->
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create New Application</h6>
      </div>

      <!-- Form -->
      <div class="card-body">
        <div class="row">
          <div class="form-group col-lg-12">
              <label>Application Name(min 3 char) *</label>
              <input class="form-control" name="appName" ng-model="appName" placeholder="Your Application Name">
          </div>
          <button type="button" class="btn btn-primary" ng-click="createApplication()">Create Application</button>
        </div>
      </div>
    </div>
  </div>
</div>